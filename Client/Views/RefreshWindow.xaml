<Window x:Class="Client.Views.RefreshWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views" WindowStyle="None"
        mc:Ignorable="d" IsManipulationEnabled="False"
        WindowStartupLocation="CenterScreen"
        Title="" Height="130" Width="200">
    <StackPanel>
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0A222D"/>
                <GradientStop Color="#FF00B3FF" Offset="1"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <Label Content="Refreshing..." Margin="50"
               VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF99FF91"/>
    </StackPanel>
</Window>
